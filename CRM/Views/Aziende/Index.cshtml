@model IEnumerable<CRM.Models.DbModels.Aziende>

@{
    ViewBag.Title = "AziendeIndex";
}

<div class="content-box">

    <div class="d-flex align-items-center">
        <h2>Aziende</h2>
        <div class="mx-3">
            <a href="@Url.Action("Create")">
                <i class="fa-solid fa-plus btn btn-crm"></i>
            </a>
        </div>
    </div>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PIVA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Citta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Indirizzo)
                </th>

                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PIVA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Citta), @Html.DisplayFor(modelItem => item.Regione)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Indirizzo)
                    </td>

                    <td>
                        <a href="@Url.Action( "Edit", new { id = item.Id })" class="text-dark"> <i class="fa-solid fa-pencil"></i></a>
                        <a href="@Url.Action( "Details", new { id = item.Id })" class="text-dark"> <i class="fa-solid fa-magnifying-glass"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

@section scripts
{
    <script src="~/Scripts/MyScripts/LoadDataTable.js"></script>
    <script>
        LoadDataTable([5])
    </script>
}