@model CRM.Models.DbModels.Clienti

@{
    ViewBag.Title = "Details";
}


<div class="content-box">

    <div class="d-flex align-items-center">
        <h2 class="d-inline-block">@Model.Nome</h2>
        <a href="@Url.Action( "Edit", new { id = Model.Id })" class="text-dark"> <i class="fa-solid fa-pencil m-2"></i></a>
    </div>

    <div class="row">

        <h5> Generalità </h5>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.Nome)
            </div>

            <div>
                @Html.DisplayFor(model => model.Nome)
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.DataNascita)
            </div>

            <div>
                @Html.DisplayFor(model => model.DataNascita)
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.Genere)
            </div>

            <div>
                @Html.DisplayFor(model => model.Genere)
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.Localita)
            </div>

            <div>
                @Html.DisplayFor(model => model.Localita)
            </div>
        </div>


        <hr class="mt-4" />

        <h5> Recapiti </h5>


        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.Email)
            </div>

            <div>
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.Telefono)
            </div>

            <div>
                @Html.DisplayFor(model => model.Telefono)
            </div>
        </div>


        <hr class="mt-4" />

        <h5> Altro </h5>


        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.DataRegistrazione)
            </div>

            <div>
                @Html.DisplayFor(model => model.DataRegistrazione)
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                Azienda di riferimento
            </div>

            <div>
                @Html.DisplayFor(model => model.Aziende.Nome)
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="fw-bold">
                @Html.DisplayNameFor(model => model.Note)
            </div>

            <div>
                @Html.DisplayFor(model => model.Note)
            </div>
        </div>

    </div>

</div>

<div class="content-box mb-3 mt-4 ">
    <h2>Appuntamenti registrati per @Model.Nome:</h2>
</div>

@{ Html.RenderAction("AppuntamentiPartial", "Appuntamenti", new { idCliente = Model.Id, idUtente = 0 }); }